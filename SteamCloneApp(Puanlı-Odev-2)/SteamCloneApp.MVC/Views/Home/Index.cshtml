@model List<GameDisplayResponse>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div id="games">
    @foreach (var game in Model)
    {
        <div onclick="redirectToDetails('@game.Id')">
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src=@game.Images.FirstOrDefault() class="img-fluid rounded-start" alt="resim">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body d-flex">
                            <div>
                                <h5 class="card-title">@game.Title</h5>
                                <p class="card-text">@game.Description</p>
                                <p class="card-text">
                                    <small class="text-body-secondary">
                                        @foreach (var genre in game.Genres)
                                        {
                                            @($"{genre} ")
                                        }
                                    </small>
                                </p>
                                <p class="card-text"><small class="text-body-secondary">@(game.ReleaseAt) tarihinde yayımlandı</small></p>

                            </div>
                            <div class="d-flex align-items-center">
                                <button class="btn btn-success">Sepete ekle</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts{
    <script>
        const redirectToDetails = (id) => {
            window.location.href = '/game/gamedetail/' + id;
        }
    </script>
}
