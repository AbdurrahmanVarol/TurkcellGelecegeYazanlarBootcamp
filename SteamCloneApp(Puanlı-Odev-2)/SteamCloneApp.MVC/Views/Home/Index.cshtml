@model List<GameDisplayResponse>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div id="games">
    @foreach (var game in Model)
    {
        <div class="gameCard row mb-3" onclick="redirectToDetails('@game.Id')" >
            <div class="card">
                <div class="row">
                    <div class="col-md-4 p-0 m-0">
                        <img src=@game.Images.FirstOrDefault() class="img-fluid rounded-start" alt="resim" style="max-height:100%;max-width:100%;">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body d-flex justify-content-between">
                            <div>
                                <h5 class="card-title">@game.Title</h5>
                                <div class="d-flex gap-1">
                                    <i class="bi bi-microsoft text-dark-emphasis"></i>
                                    <i class="bi bi-apple text-dark-emphasis"></i>
                                    <i class="bi bi-steam text-dark-emphasis"></i>
                                </div>
                                <p class="card-text">
                                    <div class="d-flex gap-1 text-dark-emphasis">
                                        @foreach (var genre in game.Genres)
                                        {
                                            <span>@genre</span>
                                        }
                                    </div>
                                    <small class="text-body-secondary">
                                      
                                    </small>
                                </p>
                            </div>
                            <div class="d-flex align-items-center">
                                <span class="mb-2" style="color:white;">@(game.Price) TL</span>
                                <button class="btn btn-success">Sepete ekle</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts{
    <script>
        const redirectToDetails = (id) => {
            window.location.href = '/game/gamedetail/' + id;
        }
    </script>
}
